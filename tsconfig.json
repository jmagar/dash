{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "tsBuildInfoFile": "./tsconfig.root.tsbuildinfo",
    "baseUrl": ".",
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "paths": {
      "@/*": ["src/*"],
      "@server/*": ["src/server/*"],
      "@shared/*": ["src/shared/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "references": [
    { "path": "./tsconfig.shared.json" },
    { "path": "./tsconfig.server.json" },
    { "path": "./tsconfig.client.json" }
  ],
  "include": [
    "src/types/**/*",
    "src/shared/**/*",
    "src/server/**/*",
    "src/client/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}

{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "tsBuildInfoFile": "./tsconfig.shared.tsbuildinfo",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": [
    "src/types/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/client/**/*",
    "src/server/**/*"
  ]
}

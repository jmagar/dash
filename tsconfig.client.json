{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ES2021"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "composite": true,
    "declaration": true,
    "tsBuildInfoFile": "./tsconfig.client.tsbuildinfo",
    "outDir": "dist/client",
    "isolatedModules": true,
    "allowJs": true,
    "types": [
      "node",
      "jest",
      "react",
      "react-dom"
    ],
    "paths": {
      "@client/*": ["src/client/*"],
      "@shared/*": ["src/shared/*"],
      "@server/*": ["src/server/*"]
    }
  },
  "include": [
    "src/client/**/*.ts",
    "src/client/**/*.tsx",
    "src/shared/**/*.ts",
    "src/types/**/*.ts",
    "src/types/**/*.d.ts",
    "src/**/*.stories.tsx",
    "src/server/routes/auth/dto/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/server/**/*.test.ts",
    "src/server/**/*.spec.ts",
    "src/server/**/*.e2e-spec.ts"
  ]
}

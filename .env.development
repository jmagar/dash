# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=shh_dev_db
DATABASE_USER=shh_dev_user
DATABASE_PASSWORD=shh_dev_password
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# Authentication and Security
JWT_SECRET=development_secret_key_must_be_long_and_complex
JWT_EXPIRATION=1h
BCRYPT_SALT_ROUNDS=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_SOCKET_URL=http://localhost:3001

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/development.log

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_MFA=true
ENABLE_AUDIT_LOGGING=true

# SSH Connection Defaults
DEFAULT_SSH_PORT=22
SSH_PRIVATE_KEY_PATH=/path/to/default/private/key

# External Service Integrations
# Uncomment and fill in if needed
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# SENTRY_DSN=

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=false

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000
RATE_LIMIT_MAX_REQUESTS=100

# Debug Options
DEBUG=shh:*

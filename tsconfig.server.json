{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "allowJs": true,
    "outDir": "dist/server",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "src/server/**/*",
    "src/**/*.server.ts",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.client.ts",
    "src/**/*.tsx",
    "src/components/**/*",
    "src/context/**/*",
    "src/hooks/**/*",
    "src/styles/**/*"
  ]
}

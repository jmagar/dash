{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019"],
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "jsx": "react"
  },
  "include": [
    "src/server/**/*",
    "src/types/**/*",
    "src/utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "src/client",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}

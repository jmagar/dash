{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist/server",
    "rootDir": "src",
    "composite": true,
    "tsBuildInfoFile": "./tsconfig.server.tsbuildinfo",
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "types": [
      "node",
      "jest",
      "express"
    ]
  },
  "include": [
    "src/server/**/*",
    "src/server/utils/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}

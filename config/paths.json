{
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"],
      "@client/*": ["src/client/*"],
      "@server/*": ["src/server/*"],
      "@shared/*": ["src/shared/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["config/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.d.ts"
  ]
}

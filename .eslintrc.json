{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "no-console": ["error", {
      "allow": ["warn", "error", "info", "debug"]
    }]
  },
  "overrides": [
    {
      "files": ["src/utils/*Logger.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}

{
    "version": "2.0",
    "fileSystem": {
        "indexPath": "./index",
        "cacheDirectory": "./cache",
        "maxCacheSize": 1073741824,
        "excludePatterns": [
            "node_modules",
            "bin",
            "obj",
            ".git"
        ]
    },
    "codeAnalysis": {
        "maxFileSize": 1048576,
        "batchSize": 100,
        "timeout": 30000,
        "languages": {
            "powershell": {
                "extensions": [".ps1", ".psm1", ".psd1"],
                "parser": "PowerShell",
                "cascadeCompatibility": "high"
            },
            "python": {
                "extensions": [".py"],
                "parser": "Python",
                "cascadeCompatibility": "high"
            },
            "javascript": {
                "extensions": [".js", ".jsx"],
                "parser": "JavaScript",
                "cascadeCompatibility": "medium"
            },
            "typescript": {
                "extensions": [".ts", ".tsx"],
                "parser": "TypeScript",
                "cascadeCompatibility": "medium"
            }
        }
    },
    "cascade": {
        "automation": {
            "maxComplexity": 50,
            "minTestCoverage": 80,
            "maxDependencies": 20,
            "safetyThresholds": {
                "high": 90,
                "medium": 70,
                "low": 50
            },
            "toolPreferences": {
                "edit_file": {
                    "priority": 1,
                    "maxChangesPerFile": 50,
                    "requiresValidation": true
                },
                "view_file": {
                    "priority": 2,
                    "maxLinesPerView": 200
                }
            }
        },
        "refactoring": {
            "strategies": {
                "split_function": {
                    "maxFunctionSize": 50,
                    "minExtractSize": 10,
                    "requiresTests": true
                },
                "rename_symbol": {
                    "requiresTypeInfo": true,
                    "scopeAnalysis": true
                },
                "extract_component": {
                    "minComplexity": 15,
                    "requiresDependencyAnalysis": true
                }
            },
            "validation": {
                "required": ["syntax", "compilation"],
                "recommended": ["unit_tests", "integration_tests"],
                "optional": ["performance_tests"]
            },
            "rollback": {
                "enabled": true,
                "checkpoints": ["pre_change", "post_change", "post_validation"],
                "maxAttempts": 3
            }
        },
        "analysis": {
            "symbolGraph": {
                "enabled": true,
                "maxDepth": 5,
                "includeDependencies": true
            },
            "impactAnalysis": {
                "enabled": true,
                "scope": ["direct", "indirect", "cascading"],
                "maxDepth": 3
            },
            "metrics": {
                "complexity": {
                    "cyclomatic": true,
                    "cognitive": true,
                    "halstead": false
                },
                "dependencies": {
                    "direct": true,
                    "indirect": true,
                    "external": true
                },
                "testing": {
                    "coverage": true,
                    "assertions": true,
                    "mutations": false
                }
            }
        },
        "optimization": {
            "caching": {
                "enabled": true,
                "strategy": "lru",
                "maxSize": 536870912
            },
            "parallelization": {
                "enabled": true,
                "maxWorkers": 4,
                "chunkSize": 25
            },
            "batching": {
                "enabled": true,
                "maxSize": 50,
                "timeout": 5000
            }
        }
    },
    "storage": {
        "type": "file",
        "path": "./data",
        "compression": true,
        "backup": {
            "enabled": true,
            "interval": 86400,
            "retention": 7
        }
    },
    "astAnalysis": {
        "maxNodes": 10000,
        "timeout": 30000,
        "features": {
            "symbols": true,
            "references": true,
            "dependencies": true,
            "types": true
        }
    }
}

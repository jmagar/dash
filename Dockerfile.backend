FROM node:16-alpine

# Install system dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    openssh-client

WORKDIR /app

# Install app dependencies
COPY backend/package*.json ./
RUN npm install

# Copy source code
COPY backend/ .
COPY db/ ./db/

# Create directory for SSH keys
RUN mkdir -p /root/.ssh && \
    chmod 700 /root/.ssh

# Expose port
EXPOSE 4000

# Start app
CMD ["npm", "start"]

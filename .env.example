# Server Configuration
PORT=4000
NODE_ENV=development
DOCKER_BUILD=0

# Security
JWT_SECRET=change-this-in-production
JWT_EXPIRATION=1h
ALLOWED_ORIGINS=http://localhost:4000,http://localhost:3000

# Authentication
DISABLE_AUTH=false
REACT_APP_DISABLE_AUTH=false

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=shh
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_MAX_MEMORY=512
REDIS_MAX_KEYS=10000
REDIS_METRICS_INTERVAL=60000
REDIS_ERROR_THRESHOLD=10
REDIS_PASSWORD=
REDIS_SSL=false

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=dev # dev or combined
LOG_DIR=logs

# File System
MAX_FILE_SIZE=1mb
ALLOWED_UPLOAD_EXTENSIONS=.txt,.md,.json,.yml,.yaml
UPLOAD_DIR=uploads

# Docker
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_API_VERSION=v1.41
DOCKER_TIMEOUT=30000

# SSH
SSH_KEY_DIR=keys
SSH_CONNECTION_TIMEOUT=10000
SSH_KEEP_ALIVE_INTERVAL=10000

# Frontend URLs
FRONTEND_URL=http://localhost:4000
REACT_APP_API_URL=http://localhost:4000/api
REACT_APP_WS_URL=ws://localhost:4000

# Build Configuration
SKIP_PREFLIGHT_CHECK=false
DISABLE_ESLINT_PLUGIN=false
CI=false
BABEL_ENV=development
REACT_APP_WDS_SOCKET_PORT=0

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=

# Feature Flags
ENABLE_MFA=false
ENABLE_FILE_ENCRYPTION=false
ENABLE_AUDIT_LOGS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=backups

# Remember to:
# 1. Never commit .env files to version control
# 2. Use strong, unique values in production
# 3. Regularly rotate secrets
# 4. Use a secrets management service in production
# 5. Enable all security features in production

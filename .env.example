# Backend Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/shh_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password
DATABASE_NAME=shh_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your_very_long_and_complex_secret_key
JWT_EXPIRATION=1h

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_SOCKET_URL=http://localhost:3001

# Security Settings
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# External Service Integrations (if applicable)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Optional Feature Flags
ENABLE_REGISTRATION=true
ENABLE_MFA=true
ENABLE_AUDIT_LOGGING=true

# SSH Connection Defaults
DEFAULT_SSH_PORT=22
SSH_PRIVATE_KEY_PATH=/path/to/default/private/key

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Monitoring and Telemetry
SENTRY_DSN=
DATADOG_API_KEY=

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=false
